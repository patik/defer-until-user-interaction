{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["dom", "esnext"],
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "allowJs": true
    },
    "include": ["src/**/*.ts*", "src/tests/**/*.ts*", "jest.config.ts"],
    "exclude": ["../node_modules", "node_modules"]
}
